<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF4500"
                android:endColor="#FF6347"
                android:angle="45" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#007BFF"
                android:endColor="#28A745"
                android:angle="45" />
            <corners android:radius="32dp" />
            <stroke android:width="3dp" android:color="#FFD700" />
        </shape>
    </item>
</selector>
